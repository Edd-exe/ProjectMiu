@model Discussion

@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <div class="bg-primary text-white p-1 m-1 text-center">
        <h2>Tartışma paylaşımını silmek istediğinize emin misiniz?</h2>
    </div>
    <div class="bg-danger" asp-validation-summary="All"></div>
    <form asp-action="Delete" method="post" asp-controller="Discussion">
        <input type="hidden" asp-for="Id" />

        <a class="btn btn-secondary rounded-pill" asp-controller="Discussion" asp-action="List"><i class="fas fa-arrow-circle-left"></i>&nbsp;Geri Dön</a>
        <button type="submit" class="btn btn-danger rounded-pill"><i class="fas fa-trash-alt"></i>&nbsp;Sil</button>
    </form>
</div>
