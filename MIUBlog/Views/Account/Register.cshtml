@model RegisterModel
<body style="        background-image: url(https://cdn2.hubspot.net/hubfs/145335/qualities-hiring-web-designer-or-developer.jpg);
        background-repeat: no-repeat;" width: 100%; height: 100%;">
    <h1 class="h3"></h1>
    <hr>

    <div class="card" style="background-color: rgba(245, 245, 245, 0.6); width: 38rem; width: 35rem;">
        <div class="card-body">
            <h5 class="card-title">Kayıt ol</h5>
            
            
                
                    <form asp-controller="Account" asp-action="Register" method="POST">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group row">
                            <label asp-for="FirstName" class="col-sm-3 col-form-label">Ad</label>
                            <div class="col-sm-11">
                                <input class="form-control" asp-for="FirstName">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="LastName" class="col-sm-3 col-form-label">Soyad</label>
                            <div class="col-sm-11">
                                <input class="form-control" asp-for="LastName">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="UserName" class="col-sm-3 col-form-label">Kullanıcı Adı</label>
                            <div class="col-sm-11">
                                <input class="form-control" asp-for="UserName">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Password" class="col-sm-3 col-form-label">Parola</label>
                            <div class="col-sm-11">
                                <input class="form-control" asp-for="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="RePassword" class="col-sm-3 col-form-label">Parola Tekrar</label>
                            <div class="col-sm-11">
                                <input class="form-control" asp-for="RePassword">
                                <span asp-validation-for="RePassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Email" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-11">
                                <input class="form-control" asp-for="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-2">
                                <button type="submit" class="btn btn-success rounded-pill"><i class="fas fa-check-circle"></i>&nbsp;Kayıt ol</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        


    

    @section Scripts
{
        <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    }
</body>