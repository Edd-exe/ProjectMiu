@model HomeBlogModel
@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        .card {
            -webkit-border-radius: 10px;
            border-radius: 10px;
            -moz-border-radius: 10px;
            transition: box-shadow 1s;
        }

            .card:hover {
                -webkit-box-shadow: 5px 10px #888888;
                -moz-box-shadow: 5px 10px #888888;
                box-shadow: 5px 10px #888888;
            }

        .updt-btn:hover {
            color: white;
        }

        /* .card > img {
                height: 250px;
            }*/
    </style>
</head>
<body>

    <div class="container my-4">
        <div class="row">
            <div class="col-md-3">
                @await Component.InvokeAsync("Categories")
            </div>
            <div class="col-md-9">
                @await Html.PartialAsync("_Slider", Model.SliderBlog)
                @await Html.PartialAsync("_BlogList", Model.HomeBlog)
            </div>
        </div>
    </div>
    </body>
</html>
