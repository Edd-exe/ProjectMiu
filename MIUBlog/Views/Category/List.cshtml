@model IEnumerable<Category>

@{
    ViewData["Title"] = "List";
}
@section Css
{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
}

@section Scripts
{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready( function () {
            $('#myTable').DataTable();
        });
    </script>

}
<div class="container mt-3">
    <h2>Kategoriler</h2>
    <br />
    <a asp-action="Create" asp-controller="Category" class="btn btn-primary mb-3 rounded-pill"><i class="fas fa-plus-circle"></i>&nbsp;Yeni Kategori</a>
    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {
            <table data-page-length='10' id="myTable" class="table table-bordered mt-3">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Kategori Adı</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.Name</td>
                            <td>
                                <a class="btn btn-primary btn-sm rounded-circle" asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId"title="Düzenle">
                                    <i class="fas fa-pen-square"></i>
                                </a>
                                <a class="btn btn-danger btn-sm rounded-circle" asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId"title="Sil">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            }
            else
            {
                <div class="alert alert-danger">
                    Kategori Eklenmemiş
                </div>
            }
        </div>
    </div>
</div>
