@model IEnumerable<IdentityRole>
@section Css
{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
}

@section Scripts
{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready( function () {
            $('#myTable').DataTable();
        });
    </script>

}

<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Roller</h1>
        <hr>
        <a class="btn btn-primary btn-sm rounded-pill" href="/admin/role/create"><i class="fas fa-plus-circle"></i>&nbsp;Yeni Rol</a><br /><p></p> 
        <table data-page-length='3' id="myTable" class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 250px;">Id</td>
                    <td>Rol AdÄ±</td>
                    <td style="width: 160px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a href="/admin/role/@item.Id" class="btn btn-primary btn-sm mr-2 rounded-circle"title="Düzenle"><i class="fas fa-pen-square"></i></a>

                                <form action="/admin/role/delete" method="POST" style="display: inline;">
                                    <input type="hidden" name="RoleId" value="@item.Id">
                                    <button type="submit" class="btn btn-danger btn-sm rounded-circle"title="Sil"><i class="fas fa-trash-alt"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>Rol yok</h3>
                    </div>
                }


            </tbody>
        </table>
    </div>
</div>