@model Blog

@section scripts{

    <script src="~/modules/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Body")
    </script>
}



<div class="container">
    <div class="bg-primary text-white p-1 m-1 text-center">
        <h2>Blog Paylaşımını Düzenle </h2>
    </div>
    <div class="bg-danger" asp-validation-summary="All"></div>
    <form asp-controller="Blog" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="BlogId" />
        <input type="hidden" asp-for="Image" />
        <div class="form-group">
            <label asp-for="Title">Başlık</label>
            <input asp-for="Title" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Description">Ön Açıklama</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Body">Detaylı Açıklama</label>
            <textarea asp-for="Body" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <img src="~/img/@Model.Image" width="120" />
            <input type="file" name="file" id="file" class="form-control">
        </div>

        @if (User.IsInRole("Admin"))
        {
            <div class="form-group">
                <div class="form-check">
                    <label asp-for="isApproved" class="form-check-label">
                        <input asp-for="isApproved" class="form-check-input">
                        Onayla
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label asp-for="isHome" class="form-check-label">
                        <input asp-for="isHome" class="form-check-input">
                        Ana sayfada göster
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label asp-for="isSlider" class="form-check-label">
                        <input asp-for="isSlider" class="form-check-input">
                        Slider da göster
                    </label>
                </div>
            </div>
        }


        <input type="hidden" value="@Model.Date" asp-for="Date" />
        <div class="form-group">
            <label asp-for="CategoryId">Kategoriler</label>
            <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories">
                <option disabled selected value="">Kategori seçin...</option>
            </select>
        </div>
        <input type="hidden" asp-for="@Model.ApplicationUserId" />

        <a class="btn btn-secondary rounded-pill" asp-controller="Blog" asp-action="List"><i class="fas fa-arrow-circle-left"></i>&nbsp;Geri</a>
        <button type="submit" class="btn btn-primary rounded-pill"><i class="fas fa-save"></i>&nbsp;Kaydet</button>

    </form>

</div>