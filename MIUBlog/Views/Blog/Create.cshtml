@model Blog

@section scripts{

    <script src="~/modules/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Body")
    </script>
}
<div class="container">
    <div class="bg-primary text-white p-1 m-1 text-center">
        <h2>Blog Oluştur</h2>
    </div>

    <div class="bg-danger" asp-validation-summary="All"></div>
    <form asp-controller="Blog" asp-action="AddOrUpdate" method="post">
        <input type="hidden" asp-for="BlogId" />
        <input type="hidden" asp-for="Image" />
        <div class="form-group">
            <label asp-for="Title">Başlık</label>
            <input asp-for="Title" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Description">Ön Açıklama</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Body">Detaylı Açıklama</label>
            <textarea asp-for="Body" class="form-control"></textarea>
        </div>
        <input type="hidden" value="@DateTime.Now" asp-for="Date" />
        <div class="form-group">
            <label asp-for="CategoryId">Kategoriler</label>
            <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories">
                <option disabled selected value="">Kategori seçin...</option>
            </select>
        </div>
        <div class="form-group">
            <input type="file" name="file" id="file" class="form-control">
        </div>

        <a class="btn btn-secondary rounded-pill" asp-controller="Blog" asp-action="List"><i class="fas fa-arrow-circle-left"></i>&nbsp;Geri</a>
        <button type="submit" class="btn btn-primary rounded-pill"><i class="fas fa-save"></i>&nbsp;Kaydet</button>
    </form>

</div>